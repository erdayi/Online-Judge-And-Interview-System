{"ast":null,"code":"import GlobalHeader from \"@/components/GlobalHeader\";\nimport DailyCheckIn from \"@/components/DailyCheckIn.vue\";\nimport LeftSidebar from \"@/components/LeftSidebar.vue\";\nexport default {\n  components: {\n    GlobalHeader,\n    DailyCheckIn,\n    LeftSidebar\n  }\n};","map":{"version":3,"names":["GlobalHeader","DailyCheckIn","LeftSidebar","components"],"sources":["D:\\code\\java\\program\\oj\\code\\yuoj-frontend-master\\src\\layouts\\BasicLayout.vue"],"sourcesContent":["<template>\n  <div id=\"basicLayout\">\n    <a-layout style=\"min-height: 100vh\">\n      <a-layout-header class=\"header\">\n        <GlobalHeader />\n      </a-layout-header>\n      <a-layout-content class=\"content\">\n        <a-row :gutter=\"[16, 16]\" class=\"main-layout\">\n          <!-- 左侧导航栏 - 更窄 -->\n          <a-col :xs=\"0\" :sm=\"0\" :md=\"3\" :lg=\"2\" :xl=\"2\">\n            <div class=\"left-sidebar\">\n              <LeftSidebar />\n            </div>\n          </a-col>\n\n          <!-- 中间主内容区 - 更宽 -->\n          <a-col :xs=\"24\" :sm=\"24\" :md=\"18\" :lg=\"20\" :xl=\"20\">\n            <div class=\"main-content\">\n              <router-view />\n            </div>\n          </a-col>\n\n          <!-- 右侧每日打卡栏 - 更窄 -->\n          <a-col :xs=\"24\" :sm=\"24\" :md=\"3\" :lg=\"2\" :xl=\"2\">\n            <div class=\"right-sidebar\">\n              <DailyCheckIn />\n            </div>\n          </a-col>\n        </a-row>\n      </a-layout-content>\n      <a-layout-footer class=\"footer\">\n        <a href=\"https://yupi.icu\" target=\"_blank\">\n          编程导航知识星球 by 程序员鱼皮\n        </a>\n      </a-layout-footer>\n    </a-layout>\n  </div>\n</template>\n\n<style scoped>\n#basicLayout .header {\n  margin-bottom: 16px;\n  box-shadow: #eee 1px 1px 5px;\n}\n\n#basicLayout .content {\n  background: linear-gradient(to right, #fefefe, #fff);\n  margin-bottom: 16px;\n  padding: 20px;\n}\n\n.main-layout {\n  max-width: 1440px;\n  margin: 0 auto;\n}\n\n.left-sidebar {\n  position: sticky;\n  top: 20px;\n  height: fit-content;\n}\n\n.main-content {\n  min-height: calc(100vh - 200px);\n  padding: 0 20px;\n}\n\n.right-sidebar {\n  position: sticky;\n  top: 20px;\n  height: fit-content;\n}\n\n#basicLayout .footer {\n  background: #efefef;\n  padding: 16px;\n  position: sticky;\n  bottom: 0;\n  left: 0;\n  right: 0;\n  text-align: center;\n}\n\n/* 响应式设计 */\n@media (max-width: 768px) {\n  .main-layout {\n    padding: 0 8px;\n  }\n\n  .main-content {\n    padding: 0 10px;\n  }\n\n  .left-sidebar,\n  .right-sidebar {\n    position: static;\n    margin-top: 24px;\n  }\n}\n\n/* 确保表格内容在更大空间内良好显示 */\n:deep(.arco-table) {\n  width: 100%;\n}\n\n:deep(.arco-table-th),\n:deep(.arco-table-td) {\n  white-space: nowrap;\n  overflow: hidden;\n  text-overflow: ellipsis;\n}\n\n/* 用户头像在更大空间内显示更好 */\n:deep(.arco-avatar) {\n  margin: 0 auto;\n}\n</style>\n\n<script>\nimport GlobalHeader from \"@/components/GlobalHeader\";\nimport DailyCheckIn from \"@/components/DailyCheckIn.vue\";\nimport LeftSidebar from \"@/components/LeftSidebar.vue\";\n\nexport default {\n  components: { GlobalHeader, DailyCheckIn, LeftSidebar },\n};\n</script>\n"],"mappings":"AAuHA,OAAOA,YAAW,MAAO,2BAA2B;AACpD,OAAOC,YAAW,MAAO,+BAA+B;AACxD,OAAOC,WAAU,MAAO,8BAA8B;AAEtD,eAAe;EACbC,UAAU,EAAE;IAAEH,YAAY;IAAEC,YAAY;IAAEC;EAAY;AACxD,CAAC"},"metadata":{},"sourceType":"module","externalDependencies":[]}