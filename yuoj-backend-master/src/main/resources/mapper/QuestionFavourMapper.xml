<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yupi.yuoj.mapper.QuestionFavourMapper">

    <resultMap id="BaseResultMap" type="com.yupi.yuoj.model.entity.QuestionFavour">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="questionId" column="questionId" jdbcType="BIGINT"/>
        <result property="userId" column="userId" jdbcType="BIGINT"/>
        <result property="createTime" column="createTime" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="listFavourQuestionByPage" resultType="com.yupi.yuoj.model.entity.Question">
        select q.*, qf.createTime as favourTime
        from question q
        inner join (select questionId, createTime from question_favour where userId = #{favourUserId}) qf
        on q.id = qf.questionId
        where q.isDelete = 0
        order by qf.createTime desc
    </select>
</mapper>

